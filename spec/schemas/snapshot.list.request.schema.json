{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "spec/schemas/snapshot.list.request.schema.json",
    "type": "object",
    "required": [
        "path",
        "mode"
    ],
    "properties": {
        "snapshot_id": {
            "$ref": "./common.schema.json#/$defs/snapshot_id"
        },
        "repo_root": {
            "$ref": "./common.schema.json#/$defs/repo_root"
        },
        "lease_id": {
            "$ref": "./common.schema.json#/$defs/lease_id"
        },
        "path": {
            "$ref": "./common.schema.json#/$defs/path"
        },
        "mode": {
            "$ref": "./common.schema.json#/$defs/mode"
        },
        "depth": {
            "type": "integer",
            "minimum": 0,
            "maximum": 64
        },
        "include_ignored": {
            "type": "boolean"
        }
    },
    "additionalProperties": false
}