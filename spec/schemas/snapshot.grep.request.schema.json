{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "spec/schemas/snapshot.grep.request.schema.json",
    "type": "object",
    "required": [
        "snapshot_id",
        "query",
        "paths",
        "mode",
        "case_sensitive",
        "regex"
    ],
    "properties": {
        "snapshot_id": {
            "$ref": "./common.schema.json#/$defs/snapshot_id"
        },
        "lease_id": {
            "$ref": "./common.schema.json#/$defs/lease_id"
        },
        "query": {
            "type": "string",
            "minLength": 1
        },
        "paths": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "mode": {
            "$ref": "./common.schema.json#/$defs/mode"
        },
        "case_sensitive": {
            "type": "boolean"
        },
        "regex": {
            "type": "boolean"
        },
        "limits": {
            "$ref": "./common.schema.json#/$defs/limits"
        }
    },
    "additionalProperties": false
}